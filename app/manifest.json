{
    "name": "NCU GPA Calculator",
    "version": "1.0.0",
    "description": "Calculate GPA for NCU students once they enter the grading page",
    "permissions": [
        "*://*.cc.ncu.edu.tw/system/162*",
        "*://cis.ncu.edu.tw/ScoreInquiries/student/student_record.php",
        "cookies",
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/gpa_16.png",
            "32": "images/gpa_32.png",
            "48": "images/gpa_64.png",
            "128": "images/gpa_128.png"
        }
    },
    "icons": {
        "16": "images/gpa_16.png",
        "32": "images/gpa_32.png",
        "48": "images/gpa_64.png",
        "128": "images/gpa_128.png"
    },
    "manifest_version": 2
}